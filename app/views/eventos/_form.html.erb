<%= form_for @evento do |f| %>
  <div class="form-group">
    <%= f.label :titulo %><br/>
    <%= f.text_area :titulo, cols:50, rows: 5 %>
  </div>
  <p>
    <%= f.label :descricao %><br/>
    <%= f.text_area :descricao, cols: 50, rows: 10 %>
  </p>
  <p>
    <%= f.label :registro_id %></br/>
    <%= f.collection_select(:registro_id, @registros, :id, :ano, prompt: true) %>
  </p>
  <p>
    <%= f.submit "Submeter", :class => 'btn btn-primary' %>
  </p>
<% end %>
